<h1>Your Articles</h1>
<h2>Total number of articles: <%= @articles.count %></h2>
<button><%= link_to "Add a new article", new_article_path %></button>

<ol>
  <% @articles.each do |article| %>
    <li><strong><%= link_to article.title, article_path(article) %></strong>
      <p> <%= article.content %> </p>
    </li>
  <% end %>
</ol>
